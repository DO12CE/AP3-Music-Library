{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
    <style>
        .card {
            background-color: #1e1e1e;
            border: 1px solid #333;
            color: white;
        }

        .card-img-top {
            height: 260px;
            object-fit: cover;
            background-color: #2c2c2c;
        }

        .card-title, .text-muted {
            color: #e0e0e0;
        }

        .favorite-toggle {
            cursor: pointer;
            font-size: 1.6rem;
            transition: all 0.2s ease-in-out;
        }

        .favorite-toggle:hover {
            transform: scale(1.2);
        }
    </style>

    <h1 class="text-center mb-4 text-light">üéß Albums</h1>

    <div class="row">
        {% for release in releases %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="{{ release.thumbnailURL ?: asset('images/default-thumbnail.jpg') }}" class="card-img-top" alt="Image de {{ release.name }}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">
                                {{ release.name|slice(0, 15) ~ (release.name|length > 15 ? '...' : '') }}
                            </h5>
                            <span 
                                class="favorite-toggle"
                                data-id="{{ release.id }}"
                                style="color: {{ app.user and release in app.user.favoriteReleases ? 'red' : 'gray' }};">
                                {{ app.user and release in app.user.favoriteReleases ? '‚ù§Ô∏è' : 'ü§ç' }}
                            </span>
                        </div>
                        <p class="text-muted small">
                            Par {{ release.artiste.Nom|slice(0, 18) ~ (release.artiste.Nom|length > 18 ? '...' : '') }}
                        </p>

                        {% if is_granted('ROLE_ADMIN') %}
                        <form method="post" action="{{ path('app_release_delete', {'id': release.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet album ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ release.id) }}">
                            <button class="btn btn-sm btn-outline-danger mt-2 w-100">üóëÔ∏è Supprimer</button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-light">
                <p>Aucun album trouv√©.</p>
            </div>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="text-center mt-4">
        <a href="{{ path('app_release_new') }}" class="btn btn-success">‚ûï Cr√©er un nouvel album</a>
    </div>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('home') }}" class="btn btn-outline-light">‚¨ÖÔ∏è Retour √† l'accueil</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.favorite-toggle').forEach(function(el) {
                el.addEventListener('click', function () {
                    const releaseId = this.getAttribute('data-id');

                    fetch(`/release/${releaseId}/toggle-favorite`, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            this.style.color = data.favorite ? 'red' : 'gray';
                            this.innerHTML = data.favorite ? '‚ù§Ô∏è' : 'ü§ç';
                        }
                    });
                });
            });
        });
    </script>
{% endblock %}
